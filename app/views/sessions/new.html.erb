<h1>Login to Jungle</h1>

<%= form_tag '/login' do %>
  <div class="form-group">
    <label for="inputEmail">Email address: </label>
    <%= text_field_tag :email, nil, class: 'form-control', :style => "width:50%;" %>
  </div>
  <div class="form-group">
    <label for="inputPassword">Password: </label>
    <%= password_field_tag :password, nil, class: 'form-control', :style => "width:40%;" %>
  </div>
  <%= submit_tag "Login", class: 'btn btn-primary' %>

<% end %>