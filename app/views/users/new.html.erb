<h1>Signup for Jungle</h1>

<%= form_for :user, url: '/users' do |f| %>
  <div class="form-group">
    <%= f.label "First Name: " %>
    <%= f.text_field :first_name, :class => 'form-control', :style => "width:50%;" %>
  </div>
  <div class="form-group">
    <%= f.label "Last Name: " %>
    <%= f.text_field :last_name, :class => 'form-control', :style => "width:50%;" %>
  </div>
  <div class="form-group">
    <%= f.label "Email address: " %>
    <%= f.text_field :email, :class => 'form-control', :style => "width:50%;" %>
  </div>
  <div class="form-group">
    <%= f.label "Password: " %>
    <%= f.password_field :password, :class => 'form-control', :style => "width:50%;" %>
  </div>
  <div class="form-group">
    <%= f.label "Password Confirmation: " %>
    <%= f.password_field :password_confirmation, :class => 'form-control', :style => "width:50%;" %>
  </div>
  <%= f.submit "Sign Up", class: 'btn btn-primary' %>

<% end %>