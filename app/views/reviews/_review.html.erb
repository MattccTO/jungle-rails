<tr>
  <td>
    <%= review.user.first_name %>
  </td>
  <td>
    <%= review.rating %>/5
  </td>
  <td>
    <%= review.description %>
  </td>
    <% if review.user == current_user %>
      <td>
        <%= link_to fa_icon('trash'), [review.product, review],
                 method: :delete,
                 data: { confirm: 'Are you sure?' } %>
      </td>
    <% end %>
</tr>
